.footer
  position absolute
  bottom 0
  width 100%
  // margin 40px 0 0 0
  padding 20px 0
  font-size 12px
  line-height 1.5
  color #777
  text-shadow 0 1px 0 #fff
  background-color #f5f5f5
  border-top 1px solid #e5e5e5
  .footer-links
    float left
    padding 0
    list-style none
    li
      display inline-block
      line-height 16px
      &+li
        margin-left 10px
  &:after
    display block
    content ''
    clear both

.meta
  margin-bottom 20px
  padding 0
  list-style none
  font-size 12px
  li
    margin 0
  ul
    padding 0
    list-style none
  .tag
    display inline-block
    margin-left 5px
    &:first-child
