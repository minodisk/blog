a
  color #4183C4
  text-decoration none
  &.absent
    color #cc0000
  &.anchor
    display block
    padding-left 30px
    margin-left -30px
    cursor pointer
    position absolute
    top 0
    left 0
    bottom 0

.octicon
  font normal normal 16px octicons
  line-height 1
  text-decoration none
  -webkit-font-smoothing antialiased

h1
h2
h3
h4
h5
h6
  margin 20px 0 10px
  padding 0
  font-weight bold
  -webkit-font-smoothing antialiased
  cursor text
  position relative

  a.anchor
    display block
    padding-right 6px
    padding-left 30px
    margin-left -30px
    cursor pointer
    position absolute
    top 0
    left 0
    bottom 0
    &:focus
      outline none
    .octicon-link
      display none
      color #000

  &:hover
    a.anchor
      text-decoration none
      line-height 1
      padding-left 8px
      margin-left -30px
      top 15%
      .octicon-link
        display inline-block
        &:before
          content '\f05c'


